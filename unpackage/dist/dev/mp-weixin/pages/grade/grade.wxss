.grade-info {
  position: relative;
  height: 320rpx;
  color: #fff;
  font-size: 28rpx;
  overflow: hidden;
}
.grade-info image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.grade-info > view {
  margin: 30rpx 0;
  padding: 0 20rpx;
}
.grade-info .title {
  font-size: 35rpx;
  font-weight: 700;
}
.grade-info .val {
  padding-left: 16rpx;
}
.grade {
  padding: 12rpx 20rpx;
  background-color: #fff;
}
.grade .grade-field {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border-bottom: 1px solid #E7E7EB;
}
.grade .grade-field .field-label {
  flex: 0 0 360rpx;
}
.grade .grade-field .field-val {
  flex: 0 0 200rpx;
}
.grade .grade-field .field-val.score {
  flex: 0 0 200rpx;
  display: flex;
  justify-content: space-between;
}
.grade-img {
  padding: 12rpx 20rpx;
}
.grade-img .text {
  padding-bottom: 10rpx;
}
.grade-img .upload-filed {
  display: flex;
}
.grade-img .upload-filed .img-info {
  margin-left: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
}
.grade-footer {
  padding: 12rpx 20rpx;
}
.grade-footer .btn-1 {
  margin-bottom: 20rpx;
}

