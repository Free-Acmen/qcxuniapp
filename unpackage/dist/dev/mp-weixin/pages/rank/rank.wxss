.rank-page {
  padding-bottom: 186rpx;
}
.rank-page .grade-info {
  font-size: 28rpx;
  overflow: hidden;
  position: relative;
  height: 320rpx;
  color: #fff;
}
.rank-page .grade-info image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.rank-page .grade-info > view {
  margin: 20rpx 0;
  padding: 0 20rpx;
}
.rank-page .grade-info .title {
  font-size: 35rpx;
  font-weight: 700;
}
.rank-page .grade-info .val {
  padding-left: 16rpx;
}
.rank-page .section {
  padding: 6rpx 16rpx;
  font-size: 26rpx;
}
.rank-page .section .tips {
  display: flex;
  align-items: center;
  background: #F7F3FF;
  color: #416DEF;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 30rpx;
  border-radius: 26rpx;
  border-top-left-radius: 0;
  margin-bottom: 20rpx;
}
.rank-page .section .tips .share {
  position: relative;
  margin-left: 10rpx;
}
.rank-page .section .tips .share .shareBtn {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  z-index: 10;
}
.rank-page .section .rank-type {
  height: 240rpx;
  border-radius: 6rpx;
  color: #7677EA;
  text-align: center;
  position: relative;
}
.rank-page .section .rank-type.compound {
  color: #3EC8B7;
}
.rank-page .section .rank-type.major {
  color: #FEBB29;
}
.rank-page .section .rank-type .img {
  position: absolute;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.rank-page .section .rank-type .rank-val {
  font-size: 70rpx;
  margin-bottom: 16rpx;
  padding-top: 32rpx;
  font-weight: 700;
}
.rank-page .section .rank-type .rank-text {
  font-size: 30rpx;
  font-weight: 700;
}
.rank-page .section .rank-type .rank-total {
  font-size: 22rpx;
}
.rank-page .section .remark {
  color: #A5A6BD;
  font-size: 26rpx;
  padding: 20rpx 0;
}
.rank-page .section .diy-content {
  line-height: 40rpx;
}
.rank-page .section .diy-content ._img {
  width: 100%;
}
.rank-page .table {
  width: 100%;
  border-radius: 8rpx;
  display: table;
  border: 1px solid #DFE2E5;
  border-collapse: collapse;
}
.rank-page .table .th {
  text-align: center;
  padding: 10rpx 0;
  font-weight: bolder;
  display: table-cell;
  background: #F7F7F7;
  border: 1px solid #DFE2E5;
}
.rank-page .table .td {
  text-align: center;
  background: #FFFFFF;
  padding: 10rpx 0;
  display: table-cell;
  border: 1px solid #DFE2E5;
}
.rank-page .table .td.ok {
  color: #3EC8B7;
}
.rank-page .table .td.no {
  color: #FEBB29;
}
.rank-page .table .tr {
  display: table-row;
}
.rank-page .table .tr.list-active .td {
  background: #EAEBFB;
}
.rank-page .footer {
  background-color: #fff;
  padding: 10rpx 16rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.rank-page .footer .btn-group {
  display: flex;
  margin-bottom: 16rpx;
}
.rank-page .footer .btn-group .item {
  width: 50%;
  margin: 0 8rpx;
}

